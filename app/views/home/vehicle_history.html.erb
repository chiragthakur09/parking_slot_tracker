<%#= select_tag "Vehicl Registration Number", %>
<div class="container w-50">
    <%= form_with url: vehicles_path, method: :get, local: true do |form| %>
        <div class="form-group m-1 w-50">
            <%= select_tag "Vehicle Registration Number", 
                options_from_collection_for_select(@vehicles, "id", "registration_number"), 
                prompt: "Select something",class: "form-select"
            %>
            <div class="form-group m-1 text-end">
                <%= form.submit "Show Vehicle History", class: "btn btn-primary" %>
            </div>
        </div>
    <% end %>
</div>